.why
	+below(640px)
		column-count 1
	column-count 2
	column-gap 60px
	//grid-template-columns: repeat(auto-fill, minmax(12rem,1fr))
	li
		line-height: 1.4
		@extend .type--md
		margin-bottom: 20px


// about
.about
	flex(between)
.about-img
	+below(1024px)
		width: 100%
		position: static
		top 0
		margin-bottom: 20px
	width: 50%
	flex(mid)
	bg-full()
	position absolute
	img
		width: 85%
.about-wrap
	position relative
.about-info
	+below(1024px)
		width: 100%
	width: 45%
	margin-left auto
.about-title
	+below(640px)
		text-align center
	@extend .type--xl
	font-weight: 700
	color black
	margin-bottom: 30px
.about-list
	+below(640px)
		padding-left: 15px
	li
		margin-bottom: 20px
		line-height: 1.6
