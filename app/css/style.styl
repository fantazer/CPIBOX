@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em
	background: #fcfcff
.main-cont
	center(1200px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
// animate top menu === end


// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 400px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 24px
	margin-bottom: 20px
	text-align: center
	@extend .type--lg
	font-size: 48px
	font-weight: 700
	line-height: 1
	color black
.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(4px)
	tr()
	position relative
	border 1px solid $border-color
	outline none!important
.dropdown-current
	cursor pointer
	display block
	padding 10px
	padding-right 25px
	font-weight: 700
	.icon
		position absolute
		top calc(50% - 6px)
		right 10px
		size 12px
		tr()

.dropdown.active
	border-radius 4px 4px 0 0
	.icon
		transform rotate(180deg)

.dropdown-menu
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	margin-top -1px
	border-radius 0 0 4px 4px
	overflow hidden
	display none
	max-height 200px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
.dropdown-menu__el
	padding 10px
	cp()
	tr()
	border-bottom 1px solid $border-color
	//background: #f9f9f9
	&:last-child
		border 0
	&:hover
		background: white
		color black
// drop === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	border 1px solid $border-color
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// template
.section-main
	height: 100vh
	overflow hidden

.section
	+below(768px)
		padding: 50px 0
	padding: 140px 0
.section-clear
	padding-top: 0

.section--clear-mobile
	+below(1024px)
		padding-top: 0

.section--dark
	background: #f9f8ff

.section--mark
	bg-full()
	position relative
	background-attachment:fixed
	&:before
		content ''
		position absolute
		top 0
		left 0
		width: 100%
		height: 100%
		background: #f7f6ff
		opacity: .95
.section--order
	+below(1440px)
		overflow hidden

.section--clear
	padding-bottom: 0

.section--extend
	+below(768px)
		padding: 30px 0
	padding: 150px 0

.header-wrap
	width: 100%
	position absolute
	top 0
	left 0
	z-index 10
.header
	margin-top: 30px
	flex(between)
.logo
	@extend .type--lg
	font-weight: 700
.nav
	+below(1024px)
		display none
	flex(between)
	width: 50%
	font-weight: 700

.nav__el
	color black
	&:hover
		color $mark
.descr-img
	+below(640px)
		width: 100%
	margin: 60px auto 80px auto
	width: 60%
.slogan
	width: 60%
.slogan-wrap
	position relative
	height: 100%
	flex(mid)
.slogan__title
	+below(1024px)
		font-size: 10vw
	+below(640px)
		font-size: 32px
		text-align center
	font-weight: 700
	font-size: 90px
	margin-bottom: 20px
	color black
.slogan__text
	+below(640px)
		text-align center
		line-height: 1.6
	@extend .type--md
	margin-bottom: 30px
	line-height: 1.4
.slogan__get
	@extend .btn--md
	@extend .btn--mark

.slogan-img
	position absolute
	top calc(50% - 25%)
	right: -10%
	width: 50%
.slogan__get-text
	font-size: 14px
	color $mark
	display block
	margin-top: 10px
	text-decoration: underline
	opacity: .6
.section-main__icon
	position absolute
	width: 100%
	height: 100%
	left 0
	top 0
	flex(mid)
	overflow hidden
	img
		width: 70%
		opacity: .04
		animation: scale 20s linear infinite
// template === end

// slider menu
.head-toggle
	flex(mid)
	cp()
	margin-right: 10px
	+above(1025px)
		display: none
	.icon
		+below(640px)
			size 20px
		size 32px
		fill white
	.icon-close
		display: none

.head-toggle.slide-block-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-block
	position: fixed
	top 0px // Высота шапки
	width: 240px
	tr(all)
	height: 100% // Высота шапки
	z-index 100
	background: white
	padding: 60px 30px
	.icon-close
		size 18px
		position absolute
		top 25px
		right: 15px
.slide-nav__el
	display block
	margin-bottom: 10px
	font-weight: 700
	font-size: 22px

.slide-block--left
	left 0
	transform translateX(-100%)

.slide-block--right
	right 0
	transform translateX(100%)

.slide-block--open
	transform translateX(0%)

.modal-content--true
	img
		max-width 200px!important
		margin: 0 auto 20px auto
// slider menu === end

.section-main__shape
	img
		position absolute
		left -20%
		top -50%
		width: 70%

.advant-wrap
	position relative

.advant
	display: grid
	grid-gap 30px
	grid-template-columns: repeat(2, 1fr)
	//grid-template-columns: repeat(auto-fill, minmax(12rem,1fr))

.advant__el
	f()
.advant__el-icon
	flex(mid)
	br(10px)
	size 100px
	background: white
	bsh()
	margin-right: 30px
	.icon
		size 50px
		fill $mark

.advant__wrap
	width calc(100% - 140px)

.advant__el-title
	font-weight: 700
	@extend .type--md
	color black
	margin 20px 0 10px 0
.advant__el-text
	line-height: 1.4
	font-size: 14px

.shape
	position absolute
.shape-wrap
	overflow hidden
	position relative
.shape-1
	right: -20%
	top 0
.shape-2
	top 150%
	left -20%
.shape-3
	top 250%
	right -20%
.shape-4
	bottom 0
	left 10vw
	img
		width: 80%
.shape-5
	bottom 0
	right: 0
	opacity: .4
	img
		width: 100%
.shape-6
	bottom 0
	left: 0
	//transform rotate(45deg)
	img
		width: 40vw
.water-text
	color white
	position absolute
	bottom -20%
	right -10%
	font-size:20vw
	line-height: 1
	opacity: .8
// tools
.tools
	+below(768px)
		display block
		max-width 640px
		margin 0 auto 30px auto
	flex(between)
	margin-bottom: 80px
	&:nth-child(odd)
		.tools__img
			order 2
			margin-left: -5%
		.tools__info
			padding: 40px 100px 40px 40px
	&:nth-child(even)
		.tools__img
			margin-right: -5%
		.tools__info
			padding: 40px 30px 40px 100px
.tools__img
	+below(768px)
		width: 100%
		margin-bottom: 20px
		display block
	width: 60%
	br(10px)
	tr()
	cp()
	position relative
	img
		position relative
		z-index 10
		br(10px)
	&:hover
		transform scale(1.03)
.tools__img--clear
	+below(768px)
		width: 100%
		margin-bottom: 20px
		display block
	width: 45%
	cp()
	position relative
	img
		position relative
		z-index 10
.tools__info
	+below(768px)
		width: 100%
	width: 65%

	background: white
	br(20px)
.tools__title
	font-weight: 700
	margin-bottom: 10px
	@extend .type--lg
	color black

.tools__text
	line-height: 1.6
// tools === end

// solution
.solution
	f()
	justify-content space-between
.solution__title
	@extend .type--xl
	font-weight: 700
	width: 40%
	color black
.solution__info
	width: 55%
	display: grid
	grid-row-gap 40px
	grid-column-gap 40px
	grid-template-columns: repeat(2, 1fr)
	//grid-template-columns: repeat(auto-fill, minmax(12rem,1fr))
.solution__el
	br(10px)
	display inline-block
	//background: white
	line-height: 1.6
	position relative
	&:before
		content ''
		size 8px
		br(2px)
		left -20px
		top 8px
		background: $mark
		position absolute
		opacity: .4
// solution === end

// payment
.payment
	f()
	fw()
	justify-content space-between
	align-items: flex-grow
.payment__el
	+below(960px)
		width: 60%
		margin: 0 auto 20px auto
	+below(640px)
		width: 100%
		padding: 30px
	width: 30%
	background: white
	padding: 80px 30px
	flex(mid)
	fl()
	box-shadow 0px 20px 20px #f6eeff
	text-align center
	br(20px)
.payment__title
	@extend .type--lg
	font-weight: 700
	color black
	margin-bottom: 15px
.payment__descr
	@extend .type--md
	font-weight: 700
	margin-bottom: 20px

.payment__cost
	+below(640px)
		margin: 15px 0
	@extend .type--xl
	font-weight: 700
	color black
	margin: 30px 0
	span
		opacity: .6
		font-size: 18px
		display block

.payment__cost-text
	margin-bottom: 20px
	line-height: 1.6
	@extend .type--md
.payment__get
	margin-top: auto
	padding: 18px
	width: 100%
// payment === end

// order
.order
	+below(1024px)
		display block
		max-width 640px
	flex(between)
	margin: 0 auto
.order__info
	+below(1024px)
		width: 100%
	width: 40%
.order-title
	+below(768px)
		font-size: 12vw
	font-size: 92px
	font-weight: 700
	color black
	margin-bottom: 40px
	line-height: 1
.order-text
	+below(1024px)
		margin-bottom: 40px
	@extend .type--md
	line-height: 1.6
.order-form-el
	+below(640px)
		padding: 30px 20px
	position relative
	z-index 5
	padding: 50px 40px
	background: white
	br(20px)
	box-shadow: 0px 20px 20px #f6eeff;
.order__form
	+below(1024px)
		width: 100%
	width: 40%
	position relative

// order === end

// footer
.footer-wrap
	padding: 30px 0
	margin-top: 60px
//.main-cont
.footer
	flex(mid)
	fl()
.footer-title
	+below(640px)
		font-size: 12vw
	font-size: 48px
	font-weight: 700
	margin-bottom: 10px
	color black
.footer-text
	@extend .type--sm
	text-align center
	margin-bottom: 30px
	line-height: 1.4
	opacity: .8
.footer-phone
	display inline-block
	@extend .type--xl
	margin-bottom: 10px
	font-weight: 700
.footer-mail
	display inline-block

.footer-nav
	flex(between)
	max-width 768px
	width: 100%
	margin-bottom: 60px
.footer-nav__el
	font-weight: 700
.footer-logo
	opacity: .8
// footer === end

// soc
.soc-row
	f()
	margin: 30px
	color black
	a
		color black
.soc-row__el
	round()
	flex(mid)
	tr(all)
	margin-right: 10px
	size 40px
	background: #f6f4ff
	&:hover
		background: $mark
		.icon
			fill white
			opacity: 1
	.icon
		tr()
		opacity: .4
		size 18px
		//fill $mark
// soc === end

// business
.business
	flex(between)
.business__img
	width: 45%
.business__info
	width: 45%
.list
	li
		margin-bottom: 10px
		line-height: 1.4
		list-style none
		position relative
		&:before
			content ''
			position absolute
			size 8px
			br(2px)
			background: $mark
			opacity: .8
			top 8px
			left -25px
